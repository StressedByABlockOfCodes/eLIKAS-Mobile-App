<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/list"
            android:textSize="18sp"
            android:theme="@style/Widget.TextView.SemiBold" />

        <EditText
            android:id="@+id/txtViewSearch"
            style="@style/Widget.TextView.Normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_rounded_rectangle"
            android:drawableEnd="@drawable/ic_search_24dp"
            android:hint="@string/search_name"
            android:importantForAutofill="no"
            android:inputType="text"
            android:minHeight="48dp"
            tools:ignore="TextContrastCheck" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewResidents"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="26dp"
            android:scrollbars="vertical"
            android:nestedScrollingEnabled="true"
            app:layoutManager="LinearLayoutManager" />

        <Button
            android:id="@+id/btnAdmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/admit"
            android:theme="@style/Widget.Button.Secondary" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/cancel"
            style="@style/Widget.Button.SecondaryOutlined"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>